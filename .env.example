# Environment variables for Magnum Opus AI Platform
# Copy this file to .env and fill in your actual values

# Next.js configuration
NEXT_PUBLIC_APP_NAME="Magnum Opus"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database configuration (Supabase)
# Get this from your Supabase project settings -> Database -> Connection string
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-generated-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin credentials (for initial setup only - change after first login)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-this-password-immediately"

# API Keys - Get your own from respective services
# OpenRouter: https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-your-key-here"

# FAL.ai: https://fal.ai/dashboard/keys
FAL_AI_API_KEY="your-fal-ai-key-here"

# Google Gemini: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY="your-gemini-key-here"

# Payment Gateway (Stripe)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Cloudflare R2 for storage (or use Supabase Storage)
# Get from: https://dash.cloudflare.com/
CLOUDFLARE_R2_ACCOUNT_ID="your-account-id"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-access-key-id"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-secret-access-key"
CLOUDFLARE_R2_BUCKET_NAME="your-bucket-name"

# Alternative: Supabase Storage
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Redis for queue system
# For development: redis://localhost:6379
# For production: Use Upstash or Redis Cloud
REDIS_URL="redis://localhost:6379"

# Rate limiting and API settings
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT_MS=30000
RETRY_DELAY_MS=5000
MAX_RETRIES=3

# Content generation settings
MAX_BOOK_LENGTH=150
MAX_CHAPTER_LENGTH=5000
DEFAULT_TONE="professional"

# FFmpeg path (for audio processing)
FFMPEG_PATH="/usr/bin/ffmpeg"

# Node environment
NODE_ENV="development"
